#!/usr/bin/env python3
"""
TestFlight Invitation Management CLI

This is a convenient wrapper script for the TestFlight invitation management functionality.
It provides an easy-to-use command-line interface for managing TestFlight invitations.

Usage:
    ./testflight --check-build     # Check if latest build is ready
    ./testflight --status          # Show invitation status
    ./testflight --dry-run         # Validate emails without sending
    ./testflight                   # Process and send invitations
"""

import sys
import os

# Add the current directory to Python path to import app_store_api
sys.path.insert(0, os.path.dirname(os.path.abspath(__file__)))

from app_store_api import main

if __name__ == "__main__":
    sys.exit(main())
