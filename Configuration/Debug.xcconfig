#include "Base.xcconfig"

// Debug Configuration

// Swift Debug Settings
SWIFT_ACTIVE_COMPILATION_CONDITIONS = DEBUG
SWIFT_OPTIMIZATION_LEVEL = -Onone
DEBUG_INFORMATION_FORMAT = dwarf
ENABLE_TESTABILITY = YES

// Build Settings
ONLY_ACTIVE_ARCH = YES
VALIDATE_PRODUCT = NO
ENABLE_DEBUG_DYLIB = YES

// Preprocessor
GCC_PREPROCESSOR_DEFINITIONS = $(inherited) DEBUG=1
GCC_OPTIMIZATION_LEVEL = 0
GCC_DYNAMIC_NO_PIC = NO

// Debugging
ENABLE_NS_ASSERTIONS = YES
ENABLE_MALLOC_GUARD = YES
ENABLE_ZOMBIE_OBJECTS = YES
ENABLE_THREAD_SANITIZER = NO
ENABLE_ADDRESS_SANITIZER = NO

// Metal
MTL_ENABLE_DEBUG_INFO = INCLUDE_SOURCE
MTL_FAST_MATH = YES

// Asset Catalog
ASSETCATALOG_COMPILER_OPTIMIZATION = time
ASSETCATALOG_COMPILER_GENERATE_ASSET_SYMBOLS = YES

// Code Coverage
GCC_GENERATE_TEST_COVERAGE_FILES = YES
GCC_INSTRUMENT_PROGRAM_FLOW_ARCS = YES

// Other Swift Flags
OTHER_SWIFT_FLAGS = $(inherited) -D DEBUG -Xfrontend -warn-long-function-bodies=200 -Xfrontend -warn-long-expression-type-checking=200