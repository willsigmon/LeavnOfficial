// Configuration settings for different environments

// MARK: - Development
DEVELOPMENT_ESV_API_KEY = your-dev-esv-api-key
DEVELOPMENT_BIBLE_COM_API_KEY = your-dev-bible-com-key
DEVELOPMENT_ELEVENLABS_API_KEY = your-dev-elevenlabs-key
DEVELOPMENT_LEAVN_API_KEY = dev-leavn-api-key

// MARK: - Staging
STAGING_ESV_API_KEY = your-staging-esv-api-key
STAGING_BIBLE_COM_API_KEY = your-staging-bible-com-key
STAGING_ELEVENLABS_API_KEY = your-staging-elevenlabs-key
STAGING_LEAVN_API_KEY = staging-leavn-api-key

// MARK: - Production
PRODUCTION_ESV_API_KEY = $(ESV_API_KEY)
PRODUCTION_BIBLE_COM_API_KEY = $(BIBLE_COM_API_KEY)
PRODUCTION_ELEVENLABS_API_KEY = $(ELEVENLABS_API_KEY)
PRODUCTION_LEAVN_API_KEY = $(LEAVN_API_KEY)

// MARK: - Feature Flags
ENABLE_AUDIO_NARRATION = YES
ENABLE_OFFLINE_MODE = YES
ENABLE_HAPTIC_FEEDBACK = YES
ENABLE_APOCRYPHA = YES
ENABLE_ANALYTICS = YES

// MARK: - Cache Settings
MAX_CACHE_SIZE_MB = 500
CACHE_EXPIRATION_DAYS = 30
