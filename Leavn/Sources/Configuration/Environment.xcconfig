// MARK: - Network Settings
API_TIMEOUT_SECONDS = 30
MAX_RETRY_ATTEMPTS = 3

// MARK: - App Info
APP_NAME = Leavn
BUNDLE_ID_PREFIX = app.leavn
DEVELOPMENT_TEAM = YOUR_TEAM_ID