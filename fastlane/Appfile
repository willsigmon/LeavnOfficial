# Appfile for LeavnSuperOfficial

# The bundle identifier of your app
app_identifier("com.leavn.superofficial")

# Your Apple Developer email
apple_id(ENV["APPLE_ID"] || "your-email@example.com")

# Developer Portal Team ID
team_id(ENV["TEAM_ID"] || "YOUR_TEAM_ID")

# App Store Connect Team ID (may be different from Developer Portal Team ID)
itc_team_id(ENV["ITC_TEAM_ID"] || ENV["TEAM_ID"] || "YOUR_ITC_TEAM_ID")

# Use App Store Connect API instead of username/password
# This is more reliable for CI/CD
if ENV["APP_STORE_CONNECT_API_KEY_ID"]
  api_key_path = ENV["APP_STORE_CONNECT_API_KEY_PATH"] || "~/.private_keys/AuthKey_#{ENV['APP_STORE_CONNECT_API_KEY_ID']}.p8"
  
  app_store_connect_api_key(
    key_id: ENV["APP_STORE_CONNECT_API_KEY_ID"],
    issuer_id: ENV["APP_STORE_CONNECT_API_ISSUER_ID"],
    key_filepath: api_key_path,
    in_house: false
  )
end